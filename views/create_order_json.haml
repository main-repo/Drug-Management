%html
  %head
    %title The jQuery Example
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js", :type => "text/javascript"}
    %script{:language => "javascript", :type => "text/javascript"}
      $(document).ready(function() {
      $("#driver").click(function(event){
      var name = $("#name").val();
      $("#stage").load('/show_drug_ByCategory', {"name":name} );
      });
      });
  %body
    %p Enter your name and click on the button:
    %input#name{:size => "40", :type => "input"}/
    %br/
    #stage{:style => "background-color:cc0;"}
      STAGE
    %input#driver{:type => "button", :value => "Show Result"}/
         
           